<div class="card profile-car-card shadow">
  <%= cl_image_tag car.photo.key, crop: :fill, class: 'card-img-top' %>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <%= car.model %>
    <div class="icons d-flex justify-content-between">
      <a href=""><i class="far fa-comment-alt mr-3"></i></a>
      <%= link_to edit_car_path(car), class: 'text-decoration-none' do  %>
        <i class="far fa-edit mr-2"></i>
      <% end %>
      <%= link_to car_path(car), method: :delete, data: { confirm: "Are you sure?" }, class: 'text-decoration-none' do  %>
        <i class="fas fa-times-circle"></i>
      <% end %>
    </div>
  </div>
</div>

<% car.renter_reviews.each do |review| %>
  <div class="profile-car-review d-flex justify-content-between border-top px-2 pt-2 mb-2">
    <div class="rating-user d-flex flex-column">
      <div class="stars d-flex justify-content-between mb-3" style="width: 20%;">
        <% review.rating.times do %>
          <i class="fas fa-star"></i>
        <% end %>
        <% (5 - review.rating).times do %>
          <i class="far fa-star"></i>
        <% end %>
      </div>
      <p class="font-italic">From <%= review.rental.user.username.capitalize %></p>
    </div>
    <%= cl_image_tag review.rental.user.photo.key, crop: :fill, class: 'profile-avatar'  %>
  </div>
<% end %>
