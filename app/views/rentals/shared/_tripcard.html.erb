<div class="card mt-5 tripcard border-0 rounded shadow-sm">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= cl_image_tag rental.car.photo.key, class: "card-img full-screen" %>
    </div>
    <div class="col-md-8">
      <div class="card-body p-0 m-3">
        <h5 class="card-title"><%= Car.find(rental.car_id).model %></h5>
        <h6>â‚¬ <%= rental.price %></h6>
        <p><i class="fas fa-map-marker-alt"></i>
          <%=  Car.find(rental.car_id).pick_up_address %></p>
        <p><i class="far fa-calendar-alt"></i>
          <%= rental.start_date.strftime("%b %d") %> - <%= rental.end_date.strftime("%b %d") %></p>
        <div class="link-icons" style="flex-grow: 1;">

          <%= link_to car_path(rental.car_id), class: 'text-decoration-none' do %>
            More about <i class="fas fa-car-side"></i>
          <% end %>
          <%= link_to rental_path(rental), method: :delete, data: { confirm: "Are you sure?" }, class: 'text-decoration-none' do %>
            Cancel <i class="fas fa-trash text-muted"></i>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
