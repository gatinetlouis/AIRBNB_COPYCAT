<div class='background-navbar'>

  <div class="navbar d-flex align-items-center">
      <!-- <img src="../../assets/images/Logo_Jackynb.png" alt='logo'> -->
      <%= image_tag "logo-jackynb.png", alt: "alttext", class: 'logo center' %>
    <div class="content d-flex pr-20">
      <div class="nav-item text-center mr-5 mt-0 mb-0">
        <%= link_to cars_path do  %>
          <i class="fas fa-home fa-lg"></i>
          <p class='mt-0'> Home </p>
        <% end %>
      </div>
      <div class='nav-item text-center m-0 mr-5 mt-0 mb-0'>
        <%= link_to new_car_path do %>
          <i class='fas fa-plus fa-lg'></i>
          <p class='mt-0'> Add a car </p>
        <% end %>
      </div>
      <div class="nav-item text-center m-0 mr-5">
        <% if current_user.nil? %>
          <%= link_to new_user_session_path do %>
            <i class="fas fa-car fa-lg"></i>
            <p class='mt-0'> My activities </p>
          <% end %>
        <% elsif policy(current_user).show? %>
          <%= link_to rentals_path do %>
            <i class='fas fa-car fa-lg'></i>
            <p class='mt-0'> My activities </p>
          <% end %>
        <% end %>
      </div>
      <div class='nav-item text-center m-0 '>
        <div class='nav-item text-center m-0 mr-5'>
          <% if current_user.nil? %>
            <%= link_to new_user_session_path do %>
              <i class='fas fa-user fa-lg'></i>

              <p class='mt-0'> Account </p>
            <% end %>
          <% elsif policy(current_user).show? %>
            <%= link_to profile_path(current_user) do %>
              <i class="fas fa-user fa-lg"></i>
              <p class='mt-0'> Account </p>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
