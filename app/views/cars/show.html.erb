<div class="container mt-5">
    <h1>Detailed for a specific car</h1>

<div class="row justify-content-center">
  <div class="col-4">
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="..." alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= @car.brand %> - <%= @car.model %> </h5>
      <p class="card-text"> <%= @car.description %> </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"> address : <%= @car.pick_up_address %> </li>
      <li class="list-group-item"> <%= @car.price_per_day %> â‚¬ </li>
    </ul>
    <%= link_to 'Edit here',edit_car_path(@car), class: 'btn btn-primary' if @car.user = current_user%>
    <%= link_to 'Delete here',car_path(@car), method: :delete, class: 'btn btn-primary' if @car.user = current_user%>
  </div>
  </div>
</div>
</div>
