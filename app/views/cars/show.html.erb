<div class="container mt-5">
  <div class="row">
    <div class="col-7">
      <div class="card-body-large shadow-sm p-3 mb-3 bg-white rounded">
        <h5 class="card-title-index pl-3 pr-3"> <%= @car.brand %> - <%= @car.model %> </h5>
        <div class="d-flex pl-3 pr-3">
          <i class="fas fa-map-pin mr-2 mb-3"></i>
          <p class="card-text "> <%= @car.pick_up_city %> </p>

        </div>
        <p class="card-text border-top pt-2 pl-3 pr-3"> <%= @car.description %> </p>
        <div class="card-text border-top border-bottom pt-2 mb-2">
          <p class="card-text pl-3 pr-3"><strong> Attributes </strong></p>
          <div class= 'd-flex justify-content-around mt-4' >
            <div class="text-center">
              <i class="fas fa-paint-roller fa-lg"></i>
              <p class="p-10 font-italic"> <%= @car.color %> </p>
            </div>
            <div class="text-center">
              <i class="fas fa-euro-sign fa-lg"></i>
              <p class="p-10 font-italic"> <%= @car.price_per_day %> </p>
            </div>
            <div class="text-center">
              <i class="fas fa-lightbulb fa-lg"></i>
              <p class="p-10 font-italic"> <%= @car.neon ? "Yes" : "No" %> </p>
            </div>
          </div>
          <div class= 'd-flex justify-content-around mt-4' >
            <div class="text-center">
              <i class="fas fa-volume-up fa-lg"></i>
              <p class="p-10 font-italic"> <%= @car.watts %> watts </p>
            </div>
            <div class="text-center">
              <i class="fas fa-truck-monster fa-lg"></i>
              <p class="p-10 font-italic"> <%= @car.rim_size %> '' </p>
            </div>
            <div class="text-center">
              <i class="fas fa-user fa-lg"></i>
              <p class="p-10 font-italic"> <%= @car.user.username %> </p>
            </div>
          </div>
        </div>
        <p class="card-text pl-3 pr-3">
          <small class="text-muted">Last updated 2 hours ago</small>
        </p>
        <div class="btns mt-3">
          <% if policy(@car).edit? %>
            <%= link_to 'Edit here',edit_car_path(@car), class: 'btn btn-primary'%>
          <% end %>
          <% if policy(@car).destroy? %>
            <%= link_to 'Delete here',car_path(@car), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-5">
      <div class="card-body-large shadow-sm p-3 mb-5 bg-white rounded">
        <h5 class="card-title-index pl-3 pr-3"> <%= "Rent the #{@car.brand} - #{@car.model}" %> </h5>
        <%= simple_form_for [@car, @rental] do |f| %>
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.button :submit, "Rent this beauty now", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body-large shadow-sm p-3 mb-3 bg-white rounded">
    <h1>Comments</h1>
    <% rentals = @car.rentals %>
    <% rentals.each do |rental| %>
      <% reviews = rental.reviews %>
      <% reviews.each do |review| %>
        <div class="card mb-2">
          <div class="card-header">
            <% star = '<i class="fas fa-star text-warning"></i>' %>
            <%= (star * review.rating).html_safe %>
          </div>
          <div class="card-body">
            <h5 class="card-title"> <%= "#{review.title}" %> </h5>
            <p class="card-text"> <%= "#{review.message}" %> </p>
            <p class="card-text">
              <small class="text-muted"><%= "Review given by #{review.rental.user.username}" %></small>
            </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
